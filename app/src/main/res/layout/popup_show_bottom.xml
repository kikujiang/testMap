<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bottom_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:textColor="@android:color/black"
        android:layout_margin="20dp"
        android:text="名称信息"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/bottom_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="详情"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bottom_navi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="去这里"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bottom_create_maintenance_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加维修点"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bottom_create_assist_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加辅助点"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bottom_maintenance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="维修记录"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bottom_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="历史记录"
            android:textSize="9sp" />
    </LinearLayout>

</LinearLayout>