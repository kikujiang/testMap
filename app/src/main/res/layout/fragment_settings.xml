<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:title="个人中心"
            app:titleTextColor="@color/textColorPrimary"
            app:popupTheme="@style/OverFlowMenuTheme"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorPrimary"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            style="@style/SettingsTextView"
            android:text="用户名：" />
        <TextView
            android:id="@+id/tv_settings_name"
            style="@style/SettingsTextView2"/>
    </LinearLayout>

    <View
        style="@style/SettingsLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            style="@style/SettingsTextView"
            android:text="手机号码：" />
        <TextView
            android:id="@+id/tv_settings_phone"
            style="@style/SettingsTextView2"/>
    </LinearLayout>

    <View
        style="@style/SettingsLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            style="@style/SettingsTextView"
            android:text="邮箱：" />
        <TextView
            android:id="@+id/tv_settings_mail"
            style="@style/SettingsTextView2" />
    </LinearLayout>

    <View
        style="@style/SettingsLine"/>

    <LinearLayout
        android:id="@+id/settings_info"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            style="@style/SettingsTextView"
            android:text="版本信息" />
        <TextView
            android:id="@+id/tv_settings_version"
            style="@style/SettingsTextView2" />
    </LinearLayout>

    <View
        style="@style/SettingsLine"/>

    <LinearLayout
        android:id="@+id/settings_update"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            style="@style/SettingsTextView"
            android:text="检查新版本" />
    </LinearLayout>

    <View
        style="@style/SettingsLine"/>

    <LinearLayout
        android:id="@+id/settings_exit"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            style="@style/SettingsTextView"
            android:text="退出当前账号" />
    </LinearLayout>

    <View
        style="@style/SettingsLine"/>
</LinearLayout>