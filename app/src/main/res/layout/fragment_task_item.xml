<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_state_img"
                    android:src="@mipmap/mark_repair_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_marginLeft="10dp"
                    android:text="任务名称任务名称任务名称任务名称任务名称"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:maxEms="20"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginRight="15dp"
                    android:text="待修复"
                    android:textSize="13dp"
                    android:textColor="@color/detailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_navi"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/person_btn_bg2">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/icon18" />

                    <TextView
                        android:text="导航"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_check"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/person_btn_bg2">
                    <ImageView
                        android:id="@+id/img_check"

                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/icon20" />

                    <TextView
                        android:id="@+id/tv_check"
                        android:text="维修"
                        android:layout_marginLeft="3dp"
                        android:textSize="13sp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_edit"
                    android:layout_marginLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/person_btn_bg2">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/icon19" />

                    <TextView
                        android:text="编辑"
                        android:layout_marginLeft="3dp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_marginRight="15dp"
                    android:text="待修复"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="@color/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon17"
            android:layout_gravity="center_vertical"
            android:paddingRight="15dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>