<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:text="光缆线路名称："
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/et_line_name"
                    android:layout_marginLeft="5dp"
                    android:inputType="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:text="电力线路名称："
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/et_line_name2"
                    android:layout_marginLeft="5dp"
                    android:inputType="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:text="变电站："
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/et_line_belong"
                    android:layout_marginLeft="5dp"
                    android:inputType="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:text="架设类型："
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/et_line_type"
                    android:layout_marginLeft="5dp"
                    android:inputType="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:text="光缆长度："
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/et_line_length"
                    android:layout_marginLeft="5dp"
                    android:inputType="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="备注："
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/et_line_remark"
                    android:layout_marginLeft="5dp"
                    android:inputType="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="9sp"
                android:text="关闭"/>

            <Button
                android:id="@+id/line_create_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="9sp"
                android:text="添加维修点"/>
            <Button
                android:id="@+id/line_create_assist_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="9sp"
                android:text="添加辅助点"/>

            <Button
                android:id="@+id/line_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="9sp"
                android:text="维修状态"/>
            <Button
                android:id="@+id/line_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="9sp"
                android:text="历史记录"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>